<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatingScreenActivity">


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >





        <Button
            android:id="@+id/button_start_quiz"
            android:drawableTop="@drawable/b1"
            android:paddingTop="30dp"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:backgroundTint="#69e4c6"
            android:text="ზოგადი
უნარები"
            android:textColor="#FFFFFF"

            />

        <Button
            android:id="@+id/button2"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:paddingTop="30dp"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:backgroundTint="#7ea7f4"
            android:drawableTop="@drawable/b2"
            android:text="გეოგრაფია"
            android:textColor="#FFFFFF" />




        <Button
            android:id="@+id/button3"
            android:drawableTop="@drawable/b3"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_column="0"
            android:paddingTop="30dp"
            android:layout_gravity="fill"
            android:layout_row="1"

            android:backgroundTint="#9a7ff4"
            android:text="ინგლისური
"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button4"
            android:drawableTop="@drawable/b4"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_column="1"
            android:paddingTop="30dp"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:backgroundTint="#efc6de"
            android:text="ბიოლოგია"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button5"
            android:drawableTop="@drawable/b5"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_column="0"
            android:paddingTop="30dp"
            android:layout_gravity="fill"
            android:layout_row="2"

            android:backgroundTint="#ee6792"
            android:text="ისტორია"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button6"
            android:drawableTop="@drawable/ic_bookmark_black_24dp"
            android:layout_width="190dp"
            android:layout_height="170dp"
            android:layout_column="1"
            android:paddingTop="30dp"
            android:layout_gravity="fill"
            android:layout_row="2"

            android:backgroundTint="#f4af64"
            android:text="ლიტერატურა"
            android:textColor="#FFFFFF" />



    </GridLayout>



</RelativeLayout>
